@import '_partials/fonts.styl'
@import '_partials/reset.styl'

loraRegular = 'Lora Regular', Georgia, Tahoma, serif
openSansRegular = "Open Sans Regular", Helvetica, arial, sans-serif

darkBlue = #15161A

body
  margin 0
  padding 0
  font-family openSansRegular
  background-color darkBlue
  background-image url('/images/london-pub-bg.jpg')
  background-repeat no-repeat
  background-size 100%
  color #fff

h1, h2, h3, h4, h5, h6
  font-family loraRegular
  margin-bottom .5em

h1, h2, h3, h4, h5, h6, p
  line-height 1.8em

a
  color white

.App
  margin 0 auto
  padding 0 3rem
  box-sizing border-box

.container
  max-width 1240px
  margin 0 auto

.Nav
  padding 5rem 0
  display flex
  justify-content space-between
  align-items center
  flex-wrap wrap

  &__logo
    max-width 24rem

  &__items
    display flex
    flex-wrap wrap

    li
      margin-left 4rem
      font-size 2rem
      font-family loraRegular

.Gallery
  display flex
  flex-wrap wrap
  align-items center
  justify-content space-between

  &__item
    width calc(25% - 1rem)
    margin-bottom 2rem
    box-sizing border-box
    overflow hidden

.Profile
  padding 5rem 0
  display flex
  flex-wrap wrap
  justify-content space-between

  .About
    width 50%
    min-width 40rem
    display flex
    align-items flex-start

    &__image
      width 18rem
      height 18rem
      border-radius 100%
      margin-right 3rem

  .Gear
    width 25%
    min-width 25rem

    li
      margin-bottom 1rem

.Footer
  background-color #000
  margin 0 -3rem
  padding 1rem 3rem
  font-size .8em

  a
    font-weight bold

  .container
    display flex
    flex-wrap wrap
    justify-content space-between

@import '_mediaQueries/mobile.styl'