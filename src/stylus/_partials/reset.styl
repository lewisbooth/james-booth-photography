html
  font-size 10px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  padding 0
  margin 0

body
  margin 0
  font-size 1.5rem

h1, h2, h3, h4, h5, h6, p
  margin 0
  font-weight normal

a, button
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

a, li, button
  text-decoration none
  list-style none
  outline none
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);

a:hover, a:focus
  outline none
  border none
  text-decoration underline

a:focus, input, textarea
  outline none

ul
  padding-left 0

img 
  display block
  width 100%